<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">

    <property name="loggingPattern"
              value="%-5level %d{yyyy-MM-dd HH:mm:ss,Europe/Moscow} %logger.%method\\(%file:%line\\): %message%n"/>
    <property name="loggingHome" value="/logs/poisk/kafka-converter"/>
    <property name="rollingPattern" value="%d{yyyy-MM-dd,Europe/Moscow}"/>
    <property name="maxHistory" value="10"/>
    <property name="totalSizeCap" value="10GB"/>
    <property name="appName" value="video-kafka-converter"/>

    <appender name="info-file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <file>${loggingHome}/${appName}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${loggingHome}/${appName}.${rollingPattern}.log.zip</fileNamePattern>
            <maxHistory>${maxHistory}</maxHistory>
            <totalSizeCap>${totalSizeCap}</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${loggingPattern}</pattern>
        </encoder>
    </appender>

    <appender name="kafka-file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <file>${loggingHome}/kafka.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${loggingHome}/kafka.${rollingPattern}.log.zip</fileNamePattern>
            <maxHistory>${maxHistory}</maxHistory>
            <totalSizeCap>${totalSizeCap}</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${loggingPattern}</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>${loggingPattern}</pattern>
        </encoder>
    </appender>

    <logger level="ALL" name="ru.mail" additivity="false">
        <appender-ref ref="info-file"/>
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger level="INFO" name="org.apache.kafka" additivity="false">
        <appender-ref ref="kafka-file"/>
        <appender-ref ref="STDOUT"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="info-file"/>
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
